<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:clickable="true"
    android:focusable="true" >

    <ImageView
        android:id="@+id/restoImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/restaurant_image"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/restoImageView"
        android:orientation="vertical">

        <TextView
            android:id="@+id/restoName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/label_title_view_style"
            tools:text="Restaurant name" />

        <!-- Add special awards here, maybe image? -->

        <TextView
            android:id="@+id/restoCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Food Category" />

        <TextView
            android:id="@+id/restoPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Price Range" />

        <TextView
            android:id="@+id/restoLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Location" />
    </LinearLayout>


</RelativeLayout>