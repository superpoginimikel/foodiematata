<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/restoImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:contentDescription="@string/restaurant_image"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/restoImageView"
                android:gravity="top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/restoName"
                    style="@style/label_title_view_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Restaurant name" />

                <TextView
                    android:id="@+id/restoCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Food Category" />

                <TextView
                    android:id="@+id/restoPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Price" />

                <TextView
                    android:id="@+id/restoLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Location" />

                <TextView
                    android:id="@+id/restoPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Phone" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dishesRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/restoPhotosTitle"
                style="@style/label_title_view_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/popular_dishes" />

            <LinearLayout
                android:id="@+id/dishesLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/restoPhotosTitle"
                android:layout_margin="8dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/popularDishesImage1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="3"
                    android:contentDescription="@string/restaurant_image"
                    android:scaleType="fitCenter"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/popularDishesImage2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="3"
                    android:contentDescription="@string/restaurant_image"
                    android:scaleType="fitCenter"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/popularDishesImage3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/restaurant_image"
                    android:scaleType="fitCenter"
                    tools:srcCompat="@tools:sample/avatars" />

            </LinearLayout>

            <TextView
                android:id="@+id/viewMorePhotos"
                style="@style/label_clickable_view_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dishesLinearLayout"
                android:onClick="viewMorePhotos"
                android:clickable="true"
                android:text="@string/view_more_photos"
                android:focusable="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/reviews"
                style="@style/label_title_view_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reviews" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>